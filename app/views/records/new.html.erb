<div class ="chat-main">
    <div class="container">
      <h1>運動する</h1>
    </div>

  <%= form_with(model: @record, local: true) do |form| %>
    <div class="form-group">
      <%= form.date_field :date %>
      </div>
      <div class="form-group">
    <%= form.text_field :exercise_type, placeholder: "運動した名前" %>
    </div>
    <div class="form-group">
    <%= form.number_field :duration,min: 0 , placeholder: "運動時間（分）"%>
    </div>
     <div class="form-group">
    <%= form.number_field :reps, min: 0, placeholder: "回数" %>
  </div>
    <div class="form-group">
    <%= form.text_area :memo, rows: 1, placeholder: "メモ" %>
    </div>
 
     <%= form.submit "記録する" %>
  <% end %>

  


</div>
